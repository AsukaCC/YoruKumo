<%- partial('_partial/header',{}, {cache: true}) %>
<article class="post-container">
  <div class="post-content">
    <header class="post-header">
      <h1 class="post-title"><%= page.title %></h1>
      <div class="post-meta">
        <span class="post-time">
          <i class="fas fa-calendar"></i>
          <%= date(page.date, 'YYYY-MM-DD') %>
        </span>
        <% if (page.categories && page.categories.length) { %>
        <span class="post-categories">
          <i class="fas fa-folder"></i>
          <%- list_categories(page.categories, { show_count: false, class:
          'post-category', style: 'none', separator: ' ' }) %>
        </span>
        <% } %> <% if (page.tags && page.tags.length) { %>
        <span class="post-tags">
          <i class="fas fa-tags"></i>
          <%- list_tags(page.tags, { show_count: false, class: 'post-tag',
          style: 'none', separator: ' ' }) %>
        </span>
        <% } %>
      </div>
    </header>
    <div class="post-body"><%- page.content %></div>
  </div>
</article>

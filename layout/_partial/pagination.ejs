<nav class="pagination">
  <% if (page.total > 1) { %>

  <!-- 上一页 -->
  <a
    class="pagination-item prev <%= !page.prev ? 'disabled' : '' %>"
    href="<%- page.prev ? url_for(page.base + page.prev_link) : 'javascript:void(0)' %>">
    <svg class="icon pagination-icon" aria-hidden="true">
      <use xlink:href="#icon-arrowleft"></use>
    </svg>
  </a>

  <!-- 当前页码显示 -->
  <span class="pagination-current"
    ><%= page.current %> / <%= page.total %></span
  >

  <!-- 下一页 -->
  <a
    class="pagination-item next <%= !page.next ? 'disabled' : '' %>"
    href="<%- page.next ?  url_for(page.base + page.next_link) : 'javascript:void(0)' %>">
    <svg class="icon pagination-icon" aria-hidden="true">
      <use xlink:href="#icon-arrowright"></use>
    </svg>
  </a>
  <% } else { %>
  <div class="pagination-placeholder"></div>
  <% } %>
</nav>

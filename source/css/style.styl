@import "_variables"
@import "_partial/header"
@import "_partial/footer"
@import "_partial/about"
@import "_partial/archive"
@import "_partial/post"
@import "_widget/swiper"
@import "_widget/latestPosts"

*
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Roboto', sans-serif

html
  scroll-behavior smooth

body
  background-color var(--secondary-color)
  color var(--text-color)
  width calc(100vw - 0.5rem) // 减去滚动条宽度
  min-height 100vh
  display flex
  flex-direction column

img
  width 100%
  height 100%
  object-fit cover

a
  text-decoration none
  color var(--text-color)

.body-page-view
  flex: 1
  padding 1rem
  display flex
  flex-direction column
  align-items center


/* 整个滚动条 */
::-webkit-scrollbar
  width: 0.5rem
  height: 0.5rem


/* 滚动条轨道 */
::-webkit-scrollbar-track
  background: transparent
  border-radius: 0.5rem


/* 滚动条滑块 */
::-webkit-scrollbar-thumb
  background: var(--main-color)
  border-radius: 0.5rem
  box-shadow: inset 0 0 0.5rem var(--shadow-color1),
  inset 0 0 0.5rem var(--shadow-color2)


/* 滚动条滑块悬停状态 */
::-webkit-scrollbar-thumb:hover
  background: #555
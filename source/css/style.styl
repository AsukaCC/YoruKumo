@import "_variables"
@import "_partial/header"
@import "_partial/footer"
@import "_widget/swiper"
@import "_partial/about"

*
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Roboto', sans-serif

body
  background-color var(--secondary-color)
  color var(--text-color)
  width calc(100vw - 0.5rem) // 减去滚动条宽度
  min-height 100vh
  display flex
  flex-direction column

img
  width 100%
  height 100%
  object-fit cover

a
  text-decoration none
  color var(--text-color)

.body-page-view
  padding-top 4rem
  padding-bottom 4rem
  flex: 1


/* 整个滚动条 */
::-webkit-scrollbar {
  width: 0.5rem;  /* 纵向滚动条宽度 */
  height: 0.5rem;; /* 横向滚动条高度 */
}

/* 滚动条轨道 */
::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 0.5rem;;
}

/* 滚动条滑块 */
::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 0.5rem;;
}

/* 滚动条滑块悬停状态 */
::-webkit-scrollbar-thumb:hover {
  background: #555;
}
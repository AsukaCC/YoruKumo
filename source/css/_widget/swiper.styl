#swiper-container
  width 100%
  height 10rem
  overflow hidden
  position relative

#swiper-container img
    width 100%
    height 100%
    object-fit cover
    object-position: 0 40%


#swiper-container .shadow
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color: var(--shadow-color)


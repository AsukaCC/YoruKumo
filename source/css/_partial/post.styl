.post-container
    padding: 2rem 0
    flex: 1
    width 80%
    height 100%
    max-width: 1200px
    min-width 320px
    margin: 0 auto
    display flex
    flex-direction column
    gap 2rem
    box-sizing: border-box
    z-index 1

.post-article
  flex: 1
  display flex
  flex-direction column
  background var(--main-color)
  color var(--text-color)
  border-radius 8px
  box-shadow 0 2px 8px var(--shadow-color)
  padding 2rem

.post-header
  margin-bottom 2rem
  text-align center

.post-title
  font-size 2rem
  margin-bottom 1rem

.post-meta
  display flex
  justify-content center
  flex-wrap wrap
  gap 1rem
  color var(--secondary-text-color)
  font-size 0.9rem

.post-content
  flex: 1
  line-height 1.8


  h1, h2, h3, h4, h5, h6
    margin 1.5rem 0 1rem

  p
    margin-bottom 1rem

  img
    max-width 100%
    height auto
    border-radius 4px
    margin 1rem 0

  code
    background var(--secondary-color)
    color var(--text-color)
    padding 0.2rem 0.4rem
    border-radius 3px
    font-family monospace

  pre
    background var(--secondary-color)
    color var(--text-color)
    padding 1rem
    border-radius 4px
    overflow-x auto
    margin 1rem 0

.post-footer
  margin-top 3rem
  padding-top 2rem
  border-top 1px solid var(--shadow-color)

.post-nav
  display flex
  justify-content space-between

  &-prev, &-next
    max-width 45%

    a
      color var(--secondary-text-color)
      text-decoration none
      transition color 0.3s

      &:hover
        color var(--text-color)

    i
      margin 0 0.5rem

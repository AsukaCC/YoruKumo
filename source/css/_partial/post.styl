.page-content
  padding: 2rem 0
  flex: 1
  width 80%
  max-width: 1200px
  min-width 320px
  margin: 0 auto
  display flex
  flex-direction column
  gap 2rem
  box-sizing: border-box
  z-index 1


.page-title
  font-size: 1.5rem
  color: var(--text-color)

.post-list
  display flex
  flex-direction column
  gap 1rem
  padding: 2rem

.postItem-year
    position relative
    h3
        z-index  0
        position absolute
        top -3rem
        left -1.5rem
        font-size 8rem
        z-index 1
        font-weight: 700
        color var(--text-color)
        opacity 0.1
        pointer-events none
        user-select none

.postItem
  width 100%
  display flex
  flex-direction column
  padding 1rem
  gap 1rem
  text-overflow ellipsis
  color: var(--text-color)
  border-radius 1rem

  & > p
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical
    overflow hidden
    text-overflow ellipsis
    word-break break-all

  .postItem-title
    -webkit-line-clamp 1
    font-size 1.5rem
    font-weight 700

  .postItem-excerpt
    font-size 0.8rem

  &:hover
      color var(--secondary-text-color)
      background-color var(--main-color)





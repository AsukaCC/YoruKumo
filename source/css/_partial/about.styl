.about-container
  max-width 800px
  margin 80px auto 0
  padding 2rem

  .page-title
    font-size 2rem
    color var(--text-color)
    margin-bottom 2rem
    text-align center

  .page-content
    color var(--text-color)
    line-height 1.8

    h2
      font-size 1.5rem
      margin 2rem 0 1rem

    p
      margin-bottom 1rem

    img
      max-width 100%
      height auto
      margin 1rem 0
      border-radius 8px

    a
      color var(--primary-color)
      text-decoration none

      &:hover
        text-decoration underline
.archive-container
  padding: 6rem 2rem 2rem
  max-width: 1200px
  margin: 0 auto

.archive-content
  background: var(--secondary-color)
  padding: 2rem
  border-radius: 1rem
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1)

.archive-title
  font-size: 2rem
  margin-bottom: 2rem
  color: var(--text-color)
  text-align: center

.archive-year
  margin: 2rem 0 1rem
  h2
    font-size: 1.5rem
    color: var(--text-color)
    border-bottom: 2px solid var(--primary-color)
    padding-bottom: 0.5rem

.archive-post
  margin: 1rem 0
  padding: 0.5rem 1rem
  display: flex
  align-items: center
  transition: all 0.3s ease

  &:hover
    background: var(--hover-color)
    border-radius: 0.5rem

.archive-post-time
  color: var(--text-color-secondary)
  margin-right: 1rem
  font-size: 0.9rem
  min-width: 80px

.archive-post-title
  color: var(--text-color)
  text-decoration: none
  font-size: 1rem

  &:hover
    color: var(--primary-color)

// 简化的分页样式
.pagination
  margin-top: 2rem
  display: flex
  justify-content: center
  align-items: center
  gap: 1rem

.page-prev,
.page-next
  padding: 0.5rem 1rem
  background: var(--main-color)
  color: var(--text-color)
  border-radius: 0.5rem
  text-decoration: none
  transition: all 0.3s ease

  &:hover
    background: var(--hover-color)

.page-number
  color: var(--text-color)
  font-size: 1rem

@media (max-width: 768px)
  .archive-container
    padding: 5rem 1rem 1rem

  .archive-content
    padding: 1rem

  .archive-post
    flex-direction: column
    align-items: flex-start

  .archive-post-time
    margin-bottom: 0.5rem

  .pagination
    flex-direction: row
    flex-wrap: wrap
    justify-content: center
    gap: 0.5rem